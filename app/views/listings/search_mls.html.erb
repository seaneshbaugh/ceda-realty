<div id="mls_search">
	<h2 class="typeface-js">Quick Search Results</h2>
	<!--[if IE]>
	<iframe src="<%= @uri %>" id="iframe" scrolling="yes" height="1000px" width="687px" frameBorder="0"></iframe>
	<![endif]-->
	<![if !IE]>
	<iframe src="<%= @uri %>" id="iframe" scrolling="no" height="2500px" width="687px" frameBorder="0"></iframe>
	<![endif]>
	<script>
	window.onload = function(){
		var win = document.getElementById("iframe").contentWindow;

		win.postMessage( "testing 1 2 3", "*" );

		function receiveMessage(event) {
			document.getElementById("iframe").height= event.data + "px";
		}

		window.addEventListener("message", receiveMessage, false);

		function resizeEverySecond() {
			var iframe = document.getElementById("iframe").contentWindow;

			iframe.postMessage( "testing 1 2 3", "*" );
		}

		window.setInterval(resizeEverySecond, 1000);
	};
	</script>
</div>
