<% form_tag destroy_multiple_admin_logger_events_path, :id => "logger_event_index_form" do %>
	<div class="container_12">
		<h2>Event Log</h2>
		<p>
			This is the site's event log.
		</p>
		<div class="clearfix">&nbsp;</div>
		<table border="0" cellpadding="0" cellspacing="0" width="100%">
			<tbody>
				<tr class="even">
					<th scope="col">
						<input class="check_all" type="checkbox">
					</th>
					<th scope="col">
						<% if params[:sort] == "id" and params[:order] == "ASC" %>
							<%= link_to("ID", admin_logger_events_path(:order => "DESC", :sort => :id)) %>
						<% else %>
							<%= link_to("ID", admin_logger_events_path(:order => "ASC", :sort => :id)) %>
						<% end %>
					</th>
					<th scope="col">
						<% if params[:sort] == "person_id" and params[:order] == "ASC" %>
							<%= link_to("User", admin_logger_events_path(:order => "DESC", :sort => :person_id)) %>
						<% else %>
							<%= link_to("User", admin_logger_events_path(:order => "ASC", :sort => :person_id)) %>
						<% end %>
					</th>
					<th scope="col">
						<% if params[:sort] == "event_type" and params[:order] == "ASC" %>
							<%= link_to("Type", admin_logger_events_path(:order => "DESC", :sort => :event_type)) %>
						<% else %>
							<%= link_to("Type", admin_logger_events_path(:order => "ASC", :sort => :event_type)) %>
						<% end %>
					</th>
					<th scope="col">
						<% if params[:sort] == "description" and params[:order] == "ASC" %>
							<%= link_to("Description", admin_logger_events_path(:order => "DESC", :sort => :description)) %>
						<% else %>
							<%= link_to("Description", admin_logger_events_path(:order => "ASC", :sort => :description)) %>
						<% end %>
					</th>
					<th scope="col">
						<% if params[:sort] == "created_at" and params[:order] == "ASC" %>
							<%= link_to("Created At", admin_logger_events_path(:order => "DESC", :sort => :created_at)) %>
						<% else %>
							<%= link_to("Created At", admin_logger_events_path(:order => "ASC", :sort => :created_at)) %>
						<% end %>
					</th>
					<th scope="col">
						Actions
					</th>
				</tr>
				<% even_row = false %>
				<% for logger_event in @logger_events %>
					<%if even_row %><tr class="even"><% else %><tr><% end %><% even_row = !even_row %>
						<td scope="col">
							<%= check_box_tag "logger_event_ids[]", logger_event.id %>
						</td>
						<td scope="col"><%= link_to(logger_event.id, admin_logger_event_path(logger_event)) %></td>
						<td scope="col">
							<% if !logger_event.person.nil? %>
								<%= link_to(logger_event.person.name, admin_person_path(logger_event)) %>
							<% else %>
								None
							<% end %>
						</td>
						<td scope="col"><%= logger_event.event_type %></td>
						<td scope="col"><%= logger_event.description %></td>
						<td scope="col"><%= logger_event.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
						<td scope="col">
							<%= link_to image_tag(image_path("icons/16x16/remove.png"), :border => "0", :title => "Delete", :alt => "Delete"), admin_logger_event_path(logger_event), :method => :delete, :confirm => "Are you sure you want to delete this event? This action cannot be undone!" %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<div class="grid_12">
			<div class="clearfix">&nbsp;</div>
			<div id="pagination">
				<%= will_paginate @logger_events %>
			</div>
		</div>
		<div class="clearfix">&nbsp;</div>
	</div>
<% end %>
