<h2>ID:</h2>
<div><%= @picture.id %></div>
<h2>Preview:</h2>
<div class="show-picture-image">
	<% if !@picture.image_path.blank? %>
		<%= image_tag(image_path(@picture.image_path), :alt => @picture.alt_text) %>
	<% end %>
</div>
<h2>Title:</h2>
<div><%= @picture.title %></div>
<h2>Caption:</h2>
<div><%= @picture.caption %></div>
<h2>Alt Text:</h2>
<div><%= @picture.alt_text %></div>
<h2>Thumbnail Size:</h2>
<div><%= @picture.max_thumbnail_width %>x<%= @picture.max_thumbnail_height %></div>
<h2>SHA2 Checksum:</h2>
<div><%= @picture.sha2_checksum %></div>
<h2>Attached To:</h2>
<div>
	<% if @picture.attachable %>
		<%= @picture.attachable.class %> - <%= @picture.attachable.id %>
		<% if @picture.attachable.class == picture %>
			<%= @picture.attachable.title %>
		<% end %>
		<% if @picture.attachable.class == Listing %>
			<%= @picture.attachable.street_address %>
		<% end %>
	<% else %>
		---
	<% end %>
</div>
<h2>Created at: <%= @picture.created_at.strftime("%Y-%m-%d %H:%M:%S") %></h2>
<h2>Last Updated at: <%= @picture.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></h2>
<div>
	<a onclick="return loadpage('<%= edit_admin_picture_path(@picture) %>');">Edit Picture</a>
	<%= link_to("Delete User", admin_picture_path(@picture), :method => :delete, :confirm => "Are you sure you want to delete this picture? This action cannot be undone!") %>
</div>
