<% form_tag edit_multiple_admin_pictures_path, :id => "picture_index_form" do %>
	<div class="container_12">
		<h2>Pictures</h2>
		<p>
			Description goes here.
		</p>
		<div class="clearfix">&nbsp;</div>
		<table border="0" cellpadding="0" cellspacing="0" width="100%">
			<tbody>
				<tr class="even">
					<th scope="col">
						<input class="check_all" type="checkbox">
					</th>
					<th scope="col">
						<% if params[:sort] == "id" and params[:order] == "ASC" %>
							<%= link_to("ID", admin_pictures_path(:order => "DESC", :sort => :id)) %>
						<% else %>
							<%= link_to("ID", admin_pictures_path(:order => "ASC", :sort => :id)) %>
						<% end %>
					</th>
					<th scope="col">
						Thumbnail
					</th>
					<th scope="col">
						<% if params[:sort] == "title" and params[:order] == "ASC" %>
							<%= link_to("Title", admin_pictures_path(:order => "DESC", :sort => :title)) %>
						<% else %>
							<%= link_to("Title", admin_pictures_path(:order => "ASC", :sort => :title)) %>
						<% end %>
					</th>
					<th scope="col">
						<% if params[:sort] == "caption" and params[:order] == "ASC" %>
							<%= link_to("Caption", admin_pictures_path(:order => "DESC", :sort => :caption)) %>
						<% else %>
							<%= link_to("Caption", admin_pictures_path(:order => "ASC", :sort => :caption)) %>
						<% end %>
					</th>
					<th scope="col">
						<% if params[:sort] == "alt_text" and params[:order] == "ASC" %>
							<%= link_to("Alt Text", admin_pictures_path(:order => "DESC", :sort => :alt_text)) %>
						<% else %>
							<%= link_to("Alt Text", admin_pictures_path(:order => "ASC", :sort => :alt_text)) %>
						<% end %>
					</th>
					<th scope="col">
						Thumbnail Size
					</th>
					<th scope="col">
						Attached To
					</th>
					<th scope="col">
						<% if params[:sort] == "created_at" and params[:order] == "ASC" %>
							<%= link_to("Created At", admin_pictures_path(:order => "DESC", :sort => :created_at)) %>
						<% else %>
							<%= link_to("Created At", admin_pictures_path(:order => "ASC", :sort => :created_at)) %>
						<% end %>
					</th>
					<th scope="col">
						<% if params[:sort] == "updated_at" and params[:order] == "ASC" %>
							<%= link_to("Updated At", admin_pictures_path(:order => "DESC", :sort => :updated_at)) %>
						<% else %>
							<%= link_to("Updated At", admin_pictures_path(:order => "ASC", :sort => :updated_at)) %>
						<% end %>
					</th>
					<th scope="col">
						Actions
					</th>
				</tr>
				<% even_row = false %>
				<% for picture in @pictures %>
					<%if even_row %><tr class="even"><% else %><tr><% end %><% even_row = !even_row %>
						<td scope="col">
							<%= check_box_tag "picture_ids[]", picture.id %>
						</td>
						<td scope="col"><%= link_to(picture.id, admin_picture_path(picture)) %></td>
						<td scope="col">
							<% if !picture.thumbnail_path.nil? %>
								<%= link_to(image_tag(picture.thumbnail_path, :width => 50), admin_picture_path(picture)) %>
							<% else %>
								No Thumbnail
							<% end %>
						</td>
						<td scope="col"><%= picture.title %></td>
						<td scope="col"><%= picture.caption %></td>
						<td scope="col"><%= picture.alt_text %></td>
						<td scope="col"><%= picture.max_thumbnail_width %>x<%= picture.max_thumbnail_height %></td>
						<td scp[e="col"><%= picture.attachable %></td>
						<td scope="col"><%= picture.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
						<td scope="col"><%= picture.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
						<td scope="col">
							<%= link_to image_tag(image_path("icons/16x16/edit.png"), :border => "0", :title => "Edit", :alt => "Edit"), edit_admin_picture_path(picture) %>
							<%= link_to image_tag(image_path("icons/16x16/remove.png"), :border => "0", :title => "Delete", :alt => "Delete"), admin_picture_path(picture), :method => :delete, :confirm => "Are you sure you want to delete this picture? This action cannot be undone!" %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<div class="grid_12">
			<div class="clearfix">&nbsp;</div>
			<div id="pagination">
				<%= will_paginate @pictures %>
			</div>
		</div>
		<div class="clearfix">&nbsp;</div>
	</div>
<% end %>
