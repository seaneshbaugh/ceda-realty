<h2><%= legend %></h2>
<% if !@picture.image_path.nil? %>
	<%= image_tag(@picture.image_path, :height => 300) %>
<% end %>
<p>
	Some sort of explaination text can go here. Or not.
</p>
<% form_for [:admin, @picture], :html => {:name => 'picture', :multipart => true} do |f| %>
	<fieldset>
		<p>
			<label for="picture_title">Title:</label>
			<%= f.text_field :title, :class => "text small" %>
		</p>

		<p>
			<label for="picture_caption">Caption:</label>
			<%= f.text_field :caption, :class => "text small" %>
		</p>

		<p>
			<label for="picture_alt_text">Alt Text:</label>
			<%= f.text_field :alt_text, :class => "text small" %>
		</p>

		<p>
			<label for="picture_max_thumbnail_width">Max Thumbnail Width:</label>
			<%= f.text_field :max_thumbnail_width, :value => "100", :class => "text small" %>
		</p>

		<p>
			<label for="picture_max_thumbnail_height">Max Thumbnail Height:</label>
			<%= f.text_field :max_thumbnail_height, :value => "100", :class => "text small" %>
		</p>

		<p>
			<label for="picture_file">File:</label>
			<%= file_field :attachment, :file, :class => "text small" %>
		</p>

		<p>
			<label for="picture_page_id">Attached to page:</label>
			<%= collection_select :page, :page_id, Page.find(:all), :id, :title, {:include_blank => "None"}, :class => "small" %>
		</p>

		<p>
			<label for="picture_listing_id">Attached to listing:</label>
			<%= collection_select :listing, :listing_id, Listing.find(:all), :id, :street_address, {:include_blank => "None"}, :class => "small" %>
		</p>

		<p>
			<label for="picture_listing_id">Attached to agent resource:</label>
			<%= collection_select :agent_resource, :agent_resource_id, AgentResource.find(:all), :id, :name, {:include_blank => "None"}, :class => "small" %>
		</p>

		<br />

		<%= submit_tag "Submit", :class => "submit" %>
	</fieldset>
<% end %>
