<h2>ID:</h2>
<div><%= @blog.id %></div>
<h2>Title:</h2>
<div><%= @blog.title %></div>
<h2>Body:</h2>
<div>
<%= h(@blog.body) %>
</div>
<h2>CSS Style:</h2>
<div>
<%= h(@blog.style) %>
</div>
<h2>Created at: <%= @blog.created_at.strftime("%Y-%m-%d %H:%M:%S") %></h2>
<h2>Last Updated at: <%= @blog.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></h2>
<div>
	<a onclick="return loadpage('<%= edit_admin_blog_path(@blog) %>');">Edit User</a>
	<%= link_to("Delete Blog Post", admin_blog_path(@blog), :method => :delete, :confirm => "Are you sure you want to delete this blog post? This action cannot be undone!") %>
</div>
