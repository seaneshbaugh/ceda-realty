<div class="add-link">
	<a onclick="return loadpage('<% new_admin_agent_path %>');"><%= image_tag(image_path("icons/32x32/she-user-add.png"), :title => "New Agent", :alt => "New Agent") %>Add New Agent</a>
</div>
<table>
	<tbody>
		<tr>
			<th class="lefttop-radius">
				ID
			</th>
			<th>
				User ID
			</th>
			<th>
				Name
			</th>
			<th class="righttop-radius">
				Actions
			</th>
		</tr>
		<% even_row = false %>
		<% for agent in @agents %>
			<%if even_row %><tr class="t-color"><% else %><tr><% end %><% even_row = !even_row %>
				<td>
					<a onclick="return loadpage('<%= admin_agent_path(agent) %>');"><%= agent.id %></a>
				</td>
				<td>
					<%= agent.person_id %>
				</td>
				<td>
					<% if !agent.person.blank? and !agent.person.nil? %>
						<%= agent.person.first_name %> <%= agent.person.last_name %>
					<% else %>
						-
					<% end %>
				</td>
				<td class="center">
					<a onclick="return loadpage('<%= edit_admin_agent_path(agent) %>');"><%= image_tag(image_path("icons/16x16/edit.png"), :title => "Edit", :alt => "Edit") %></a>
					<%= link_to image_tag(image_path("icons/16x16/remove.png"), :title => "Delete", :alt => "Delete"), admin_agent_path(agent), :method => :delete, :confirm => "Are you sure you want to delete this page? This action cannot be undone!" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
<%= will_paginate @agents, :renderer => 'AjaxLinkRenderer' %>
