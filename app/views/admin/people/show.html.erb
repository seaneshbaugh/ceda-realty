<h2>Showing User: <%= @person.name %></h2>
<h5>First Name: <%= @person.first_name %></h5>
<h5>Last Name: <%= @person.last_name %></h5>
<h5>E-mail Address: <%= link_to(@person.email_address,"mailto:#{@person.email_address}") %></h5>
<h5>Phone Number: <%= @person.phone_number %></h5>
<h5>Privilege Level: <%= @person.privilege_level %></h5>
<h5>Latest IP Addresses:</h5>
<ul>
	<% if !@person.ip_addresses.blank?
		ips = @person.ip_addresses.split(";")

		for ip in ips %>
			<li><%= ip %></li>
		<% end
	end %>
</ul>
<h5>Created at: <%= @person.created_at.strftime("%Y-%m-%d %H:%M:%S") %></h5>
<h5>Last Updated at: <%= @person.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></h5>
<% if @user == @person or @user.privilege_level > @person.privilege_level %>
	<p class="show">
		<%= link_to("Edit User", edit_admin_person_path(@person)) %> |
		<%= link_to("Delete User", admin_person_path(@person), :method => :delete, :confirm => "Are you sure you want to delete this user? This action cannot be undone!") %>
	</p>
<% end %>
