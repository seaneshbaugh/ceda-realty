<h2><%= legend %></h2>
<p>
	Some sort of explaination text can go here. Or not.
</p>
<% form_for [:admin, @listing] do |f| %>
	<fieldset>
		<p>
			<label for="listing_mls_number">MLS Number:</label>
			<%= f.text_field :mls_number, :class => "text small" %>
		</p>
		<p>
			<label for="listing_street_address">Street Address:</label>
			<%= f.text_field :street_address, :class => "text small" %>
		</p>

		<p>
			<label for="listing_city">City:</label>
			<%= f.text_field :city, :class => "text small" %>
		</p>

		<p>
			<label for="listing_zipcode">Zipcode:</label>
			<%= f.text_field :zipcode, :class => "text small" %>
		</p>

		<p>
			<label for="listing_price">Price:</label>
			<%= f.text_field :price, :class => "text small" %>
		</p>

		<p>
			<label for="listing_square_feet">Square Feet:</label>
			<%= f.text_field :square_feet, :class => "text small" %>
		</p>

		<p>
			<label for="listing_number_of_bedrooms">Number of Bedrooms:</label>
			<%= f.text_field :number_of_bedrooms, :class => "text small" %>
		</p>

		<p>
			<label for="listing_number_of_full_bathrooms">Number of Full Bathrooms:</label>
			<%= f.text_field :number_of_full_bathrooms, :class => "text small" %>
		</p>

		<p>
			<label for="listing_number_of_half_bathrooms">Number of Half Bathrooms:</label>
			<%= f.text_field :number_of_half_bathrooms, :class => "text small" %>
		</p>

		<p>
			<label for="listing_description">Description:</label>
			<%= f.text_area :description, :class => "text large" %>
		</p>

		<p>
			<label for="page_is_index"><%= f.check_box :featured_listing, {}, 1, 0 %> Featured listing.</label>
		</p>

		<p>
			<label for="listing_meta_description">Meta Description:</label>
			<%= f.text_field :meta_description, :class => "text medium" %>
		</p>

		<p>
			<label for="listing_meta_keywords">Meta Keywords:</label>
			<%= f.text_field :meta_keywords, :class => "text medium" %>
		</p>

		<p>
			<label for="page_display_order">Display Order:</label>
			<%= f.text_field :display_order, :class => "text small" %>
		</p>

		<br />

		<%= submit_tag "Submit", :class => "submit" %>
	</fieldset>
<% end %>
