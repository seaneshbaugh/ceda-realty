<% form_tag edit_multiple_admin_listings_path, :id => "listing_index_form" do %>
	<div class="container_12">
		<h2>Listings</h2>
		<p>
			This is a list of all the site's listings. From here you can view, modify, or delete any listing.
		</p>
		<div class="clearfix">&nbsp;</div>
		<table border="0" cellpadding="0" cellspacing="0" width="100%">
			<tbody>
				<tr class="even">
					<th scope="col">
						<input class="check_all" type="checkbox">
					</th>
					<th scope="col">
						<% if params[:sort] == "id" and params[:order] == "ASC" %>
							<%= link_to("ID", admin_listings_path(:order => "DESC", :sort => :id)) %>
						<% else %>
							<%= link_to("ID", admin_listings_path(:order => "ASC", :sort => :id)) %>
						<% end %>
					</th>
					<th scope="col">
						<% if params[:sort] == "street_address" and params[:order] == "ASC" %>
							<%= link_to("Street Address", admin_listings_path(:order => "DESC", :sort => :street_address)) %>
						<% else %>
							<%= link_to("Street Address", admin_listings_path(:order => "ASC", :sort => :street_address)) %>
						<% end %>
					</th>
					<th scope="col">
						<% if params[:sort] == "city" and params[:order] == "ASC" %>
							<%= link_to("City", admin_listings_path(:order => "DESC", :sort => :city)) %>
						<% else %>
							<%= link_to("City", admin_listings_path(:order => "ASC", :sort => :city)) %>
						<% end %>
					</th>
					<th scope="col">
						<% if params[:sort] == "zipcode" and params[:order] == "ASC" %>
							<%= link_to("Zipcode", admin_listings_path(:order => "DESC", :sort => :zipcode)) %>
						<% else %>
							<%= link_to("Zipcode", admin_listings_path(:order => "ASC", :sort => :zipcode)) %>
						<% end %>
					</th>
					<th scope="col">
						<% if params[:sort] == "created_at" and params[:order] == "ASC" %>
							<%= link_to("Created At", admin_listings_path(:order => "DESC", :sort => :created_at)) %>
						<% else %>
							<%= link_to("Created At", admin_listings_path(:order => "ASC", :sort => :created_at)) %>
						<% end %>
					</th>
					<th scope="col">
						<% if params[:sort] == "updated_at" and params[:order] == "ASC" %>
							<%= link_to("Updated At", admin_listings_path(:order => "DESC", :sort => :updated_at)) %>
						<% else %>
							<%= link_to("Updated At", admin_listings_path(:order => "ASC", :sort => :updated_at)) %>
						<% end %>
					</th>
					<th scope="col">
						Actions
					</th>
				</tr>
				<% even_row = false %>
				<% for listing in @listings %>
					<%if even_row %><tr class="even"><% else %><tr><% end %><% even_row = !even_row %>
						<td scope="col">
							<%= check_box_tag "listing_ids[]", listing.id %>
						</td>
						<td scope="col"><%= link_to(listing.id, admin_listing_path(listing)) %></td>
						<td scope="col"><%= listing.street_address %></td>
						<td scope="col"><%= listing.city %></td>
						<td scope="col"><%= listing.zipcode %></td>
						<td scope="col"><%= listing.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
						<td scope="col"><%= listing.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
						<td scope="col">
							<%= link_to image_tag(image_path("icons/16x16/edit.png"), :border => "0", :title => "Edit", :alt => "Edit"), edit_admin_listing_path(listing) %>
							<%= link_to image_tag(image_path("icons/16x16/remove.png"), :border => "0", :title => "Delete", :alt => "Delete"), admin_listing_path(listing), :method => :delete, :confirm => "Are you sure you want to delete this listing? This action cannot be undone!" %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<div class="grid_12">
			<div class="clearfix">&nbsp;</div>
			<div id="pagination">
				<%= will_paginate @listing %>
			</div>
		</div>
		<div class="clearfix">&nbsp;</div>
	</div>
<% end %>
