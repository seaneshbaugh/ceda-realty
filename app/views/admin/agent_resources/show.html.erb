<div class="container_12">
	<div class="clearfix">
		&nbsp;
	</div>
	<h2><%= @agent_resource.name %></h2>
	<h3 class="acc_trigger active"><a href="#">Details</a></h3>
	<div style="display: block;" class="acc_container">
		<div class="block">
			<h4>Name:</h4>
			<div><%= @agent_resource.name %></div>
			<h4>Category:</h4>
			<div><%= @agent_resource.category %></div>
			<h4>Description:</h4>
			<div><%= @agent_resource.description %></div>
			<h4>Original Filename:</h4>
			<div><%= @agent_resource.original_filename %></div>
			<h4>Resource Filename:</h4>
			<div><%= @agent_resource.resource_filename %></div>
			<h4>Extension:</h4>
			<div><%= @agent_resource.extension %></div>
			<h4>SHA2 Checksum:</h4>
			<div><%= @agent_resource.sha2_checksum %></div>
			<h4>External URL:</h4>
			<div><%= @agent_resource.external_url %></div>
			<h4>Created at: <%= @agent_resource.created_at.strftime("%Y-%m-%d %H:%M:%S") %></h4>
			<h4>Last Updated at: <%= @agent_resource.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></h4>
			<% if !@agent_resource.resource_filename.blank? %>
				<h4><%= link_to("Download", get_file_admin_agent_resource_path(@agent_resource)) %></h4>
			<% end %>
			<% if !@agent_resource.external_url.blank? %>
				<h4><%= link_to("Visit Link", @agent_resource.external_url) %></h4>
			<% end %>
			<div>
				<%= link_to("Edit Agent Resource", edit_admin_agent_resource_path(@agent_resource)) %> |
				<%= link_to("Delete Agent Resource", admin_agent_resource_path(@agent_resource), :method => :delete, :confirm => "Are you sure you want to delete this agent resource? This action cannot be undone!") %>
			</div>
		</div>
	</div>
	<h3 class="acc_trigger"><a href="#">Debug Info</a></h3>
	<div style="display: none;" class="acc_container">
		<div class="block">
			<%= debug @agent_resource %>
		</div>
	</div>
</div>
