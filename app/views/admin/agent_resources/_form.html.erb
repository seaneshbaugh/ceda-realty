<script src="/javascripts/jquery.autoresize.js" type="text/javascript"></script>
<script>
	$(document).ready(function(){
		$("#agent_resource_description").autoResize({
			onResize : function() {
				$(this).css({opacity: 0.8});
			},
			animateCallback : function() {
				$(this).css({opacity: 1});
			},
			animateDuration : 300,
			extraSpace : 40
		});

		$("#agent_resource_description").trigger("keydown",{
			"which":37 // Left arrow, pretty harmless
		});
	});
</script>
<%= stylesheet_link_tag "jquery-ui-1.8.12.custom.css" %>
<%= javascript_include_tag "jquery-ui-1.8.12.custom.min.js" %>
<script>
$(function() {
	var availableTags = [
		"Buyers",
		"CEDA Docs",
		"CEDA Marketing",
		"CEDA Group Services",
		"CEDA Links",
		"Sellers"
	];
	$("#agent_resource_category").autocomplete({
		source: availableTags
	});
});
</script>
<h2><%= legend %></h2>
<p>
	Upload important files or create links to external resources here.
</p>
<% form_for [:admin, @agent_resource], :html => {:name => 'agent_resource', :multipart => true} do |f| %>
	<fieldset>
		<p>
			<label for="agent_resource_title">Name:</label>
			<%= f.text_field :name, :class => "text small" %>
		</p>
		<p>
			<label for="agent_resource_category">Category:</label>
			<%= f.text_field :category, :class => "text small" %>
		</p>
		<p>
			<label for="agent_resource_description">Description:</label>
			<%= f.text_area :description, :class => "text large" %>
		</p>
		<p>
			You may either upload a file from your computer/mobile device or enter the URL of an external resource you wish to link to.
		</p>
		<p>
			<label for="agent_resource_file">File:</label>
			<%= file_field :attachment, :file, :class => "text small" %>
		</p>
		<p>
			<label for="agent_resource_external_url">External URL:</label>
			<%= f.text_field :external_url, :class => "text medium" %>
		</p>
		<br />
		<%= submit_tag "Submit", :class => "submit" %>
	</fieldset>
<% end %>
