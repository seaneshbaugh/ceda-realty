<div class="add-link">
	<a onclick="return loadpage('<%= new_admin_agent_resource_path %>');"><%= image_tag(image_path("icons/32x32/add.png"), :title => "New Agent Resource", :alt => "New Agent Resource") %>Add New Agent Resource</a>
</div>
<table>
	<tbody>
		<tr>
			<th class="lefttop-radius">
				ID
			</th>
			<th>
				Name
			</th>
			<th>
				Category
			</th>
			<th class="showonlyland">
				Description
			</th>
			<th class="righttop-radius">
				Actions
			</th>
		</tr>
		<% even_row = false %>
		<% for agent_resource in @agent_resources %>
			<%if even_row %><tr class="t-color"><% else %><tr><% end %><% even_row = !even_row %>
				<td>
					<a onclick="return loadpage('<%= admin_agent_resource_path(agent_resource) %>');"><%= agent_resource.id %></a>
				</td>
				<td>
					<a onclick="return loadpage('<%= admin_agent_resource_path(agent_resource) %>');"><%= agent_resource.name %></a>
				</td>
				<td>
					<a onclick="return loadpage('<%= admin_agent_resources_path(:category => agent_resource.category) %>');"><%= agent_resource.category %></a>
				</td>
				<td class="showonlyland">
					<%= truncate(agent_resource.description, 64) %>
				</td>
				<td class="center">
					<a onclick="return loadpage('<%= edit_admin_agent_resource_path(agent_resource) %>');"><%= image_tag(image_path("icons/16x16/edit.png"), :title => "Edit", :alt => "Edit") %></a>
					<%= link_to image_tag(image_path("icons/16x16/remove.png"), :title => "Delete", :alt => "Delete"), admin_agent_resource_path(agent_resource), :method => :delete, :confirm => "Are you sure you want to delete this agent resource? This action cannot be undone!" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
<%= will_paginate @agent_resources, :renderer => 'AjaxLinkRenderer' %>
