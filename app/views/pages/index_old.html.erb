<%= javascript_include_tag "jquery.reject.js" %>
<script>
	$(document).ready(function() {
		$.reject({
			reject: { msie: true, opera: true, chrome: true, safari: true, firefox1: true, firefox2: true },
			display: ['firefox'/*, 'chrome', 'safari'*/],
			browserInfo: {
				firefox: {
					text: 'Firefox 4.0.1+',
					url: 'http://www.mozilla.com/en-US/products/download.html'
				}/*,
				chrome: {
					text: 'Chrome 11.0+',
					url: 'http://www.google.com/chrome/intl/en/make/download.html'
				}
				safari: {
					text: 'Safari 5.05+',
					url: 'http://www.apple.com/safari/download/'
				}*/
			},
			header: 'Sorry to interrupt you...',
			paragraph1: 'But we couldn\'t help but notice you weren\'t using the latest version of Firefox. At CEDA we strive to make our website as functional as possible for all users. However every browser is a little different when it comes to displaying webpages. We strongly recommend the latest version of Firefox for the best browsing experience.',
			paragraph2: 'Just click on the icon to be taken straight to the Firefox download page.',
			close: true,
			closeMessage: 'By closing this window you acknowledge that your experience on this website may be less than optimal.',
			closeLink: 'Close This Window',
			closeESC: true,
			closeCookie: true
		});
	});
</script>
<%= javascript_include_tag "jquery.opacityrollover.js" %>
<script>
	$(document).ready(function() {
		$("#photo_grid img").opacityrollover({
			mouseOutOpacity:   0.8,
			mouseOverOpacity:  1.0,
			fadeSpeed:         'slow'
		});
	});
</script>
